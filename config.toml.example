# DynServer Configuration Example
# Copy this file to /etc/tenrankai/config.toml and customize for your setup

[server]
# Host and port to bind to
host = "127.0.0.1"
port = 3000

[app]
# Application name (displayed in templates)
name = "Dynamic Gallery"

# Logging level: error, warn, info, debug, trace
log_level = "info"

# Secret key for signing download cookies (change this!)
# Generate with: openssl rand -hex 32
download_secret = "your-secret-key-here-change-this-to-random-value"

# Password required for download access
download_password = "your-download-password-here"

# Copyright holder name (optional)
# If set, enables copyright watermarking on images
# copyright_holder = "John Doe Photography"

[templates]
# Directory containing Liquid template files
directory = "/usr/share/tenrankai/templates"

[static_files]
# Directory containing static assets (CSS, JS, images)
directory = "/usr/share/tenrankai/static"

[gallery]
# URL path prefix for gallery routes
path_prefix = "/gallery"

# Directory containing source images
source_directory = "/var/lib/tenrankai/gallery"

# Directory for cached/resized images
cache_directory = "/var/lib/tenrankai/cache"

# Number of images to display per page
images_per_page = 20

# Cache refresh interval in minutes (optional)
# Set to 0 or omit to disable background refresh
cache_refresh_interval_minutes = 60

# Thumbnail size configuration
[gallery.thumbnail]
width = 300
height = 300

# Gallery preview size (for folder previews)
[gallery.gallery_size]
width = 400
height = 400

# Medium size (default view)
[gallery.medium]
width = 800
height = 600

# Large size (requires authentication)
[gallery.large]
width = 1600
height = 1200

# Gallery preview settings
[gallery.preview]
# Maximum number of images in gallery preview
max_images = 6
# Maximum directory depth to scan
max_depth = 3
# Maximum images per folder for preview
max_per_folder = 10