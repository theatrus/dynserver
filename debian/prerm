#!/bin/bash

set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop the service before removal
        if command -v systemctl >/dev/null 2>&1; then
            if systemctl is-active --quiet tenrankai; then
                systemctl stop tenrankai || true
            fi
        fi
        ;;
esac

#DEBHELPER#

exit 0