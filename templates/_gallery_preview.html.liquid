{% if gallery_preview and gallery_preview.size > 0 %}
    <section class="gallery-preview-component">
        <div class="preview-masonry">
            {% for item in gallery_preview %}
                <a href="/gallery/{{ item.parent_path }}#{{ item.name | replace: '.', '' | replace: ' ', '' | replace: '-', '' | replace: '_', '' }}" class="preview-item image-preview-item">
                    <div class="preview-image">
                        <img src="{{ item.thumbnail_url }}" alt="{{ item.name }}" loading="lazy">
                    </div>
                </a>
            {% endfor %}
        </div>
        {% if show_explore_link != false %}
            <div class="preview-footer">
                <a href="/gallery" class="btn-explore">Explore Full Gallery â†’</a>
            </div>
        {% endif %}
    </section>
{% endif %}

<style>
.gallery-preview-component {
    margin: 2rem 0;
}

.gallery-preview-component .preview-masonry {
    column-count: 2;
    column-gap: 1.5rem;
}

.gallery-preview-component .preview-item {
    background: #404040;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s, box-shadow 0.3s;
    display: block;
    break-inside: avoid;
    margin-bottom: 1.5rem;
}

.gallery-preview-component .preview-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.4);
}

.gallery-preview-component .preview-image {
    position: relative;
    width: 100%;
    overflow: hidden;
    background: #2a2a2a;
    display: flex;
    align-items: center;
    justify-content: center;
}

.gallery-preview-component .preview-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
    transition: transform 0.3s;
    display: block;
}

.gallery-preview-component .preview-item:hover .preview-image img {
    transform: scale(1.05);
}


.gallery-preview-component .preview-footer {
    text-align: center;
    margin-top: 2rem;
}

.gallery-preview-component .btn-explore {
    display: inline-block;
    padding: 0.75rem 2rem;
    background: #555;
    color: #e0e0e0;
    text-decoration: none;
    font-weight: 500;
    transition: background 0.3s;
}

.gallery-preview-component .btn-explore:hover {
    background: #666;
}

@media (max-width: 768px) {
    .gallery-preview-component .preview-masonry {
        column-count: 1;
        column-gap: 1rem;
    }
    
    .gallery-preview-component .preview-item {
        margin-bottom: 1rem;
    }
}
</style>